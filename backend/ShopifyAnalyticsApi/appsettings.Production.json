  "Shopify": {
    "ApiKey": "",
    "ApiSecret": "",
    "WebhookSecret": "",
    "EncryptionKey": "",
    "Scopes": "read_all_orders,read_orders,read_products,read_customers",
    "UseSimulation": false,
    "RateLimit": {
      "MaxRetries": 3,
      "RetryDelaySeconds": 2,
      "MaxRequestsPerSecond": 2
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "ECRanger": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "ShopifyAnalyticsApi.Services.ShopifyDataSyncService": "Information",
        "ShopifyAnalyticsApi.Jobs": "Information",
        "ShopifyAnalyticsApi.Services.Sync": "Information",
        "ShopifyAnalyticsApi.Services.ShopifyApiService": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "SourceContext like 'ShopifyAnalyticsApi.Services.ShopifyDataSyncService%' or SourceContext like 'ShopifyAnalyticsApi.Jobs.%' or SourceContext like 'ShopifyAnalyticsApi.Services.Sync.%' or Message like '%同期%' or Message like '%Sync%'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "/home/LogFiles/Application/sync-.log",
                  "rollingInterval": "Day",
                  "retainedFileCountLimit": 30,
                  "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "SourceContext like 'ShopifyAnalyticsApi.Services.ShopifyApiService%' or Message like '%ShopifyApiService%' or Message like '%Shopify API%'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "/home/LogFiles/Application/shopify-api-.log",
                  "rollingInterval": "Day",
                  "retainedFileCountLimit": 30,
                  "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "SourceContext = 'ShopifyAnalyticsApi.Controllers.WebhookController'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "/home/LogFiles/Application/webhook-.log",
                  "rollingInterval": "Day",
                  "retainedFileCountLimit": 30,
                  "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/home/LogFiles/Application/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
